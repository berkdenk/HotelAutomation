@using otelotomasyonu.Models
@model otelotomasyonu.Controllers.OdalarController.Oda_Class
@{
    ViewBag.Title = "Kayit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@if (Request.QueryString["oda"] == "" || Request.QueryString["oda"] == null)
{
    Response.Redirect("index");
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <!-- The above 3 meta tags *must* come first in the head; any other head content must come *after* these tags -->

    <title>Oda Kayit Sayfası</title>

    <!-- Google font -->
    <link href="https://fonts.googleapis.com/css?family=Lato:400,400i,700" rel="stylesheet">

    <!-- Bootstrap -->
    <link type="text/css" rel="stylesheet" href="~/login-form-17/css2/bootstrap.min.css">

    <!-- Custom stlylesheet -->
    <link type="text/css" rel="stylesheet" href="~/login-form-17/css2/style.css" />

    <!-- HTML5 shim and Respond.js for IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
          <script src="https://oss.maxcdn.com/html5shiv/3.7.3/html5shiv.min.js"></script>
          <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
        <![endif]-->

</head>

<body>
    <div id="booking" class="section">
        <div class="section-center">
            <div class="container">




                <div class="row">
                    <div class="booking-form">
                        <form method="post">
                            <div class="row no-margin">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <span class="form-label">Giriş Tarihi</span>
                                        <input class="form-control" name="kayit_giris_tarih" value=@if (Request.QueryString["giris"] != null) { Write(Request.QueryString["giris"]); } type="date" required>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <span class="form-label">Çıkış Tarihi</span>
                                        <input class="form-control"   name="kayit_cikis_tarih" value=@if (Request.QueryString["giris"] != null) { Write(Request.QueryString["cikis"]); } type="date" required>
                                    </div>
                                </div>
                            </div>
                            <div class="row no-margin">
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <span class="form-label">Yetişkin (18+)</span>
                                        <select class="form-control">
                                            <option selected contenteditable="false">@if (Convert.ToInt32(Request.QueryString["oda"]) < 200) { Write("1"); } @if (Convert.ToInt32(Request.QueryString["oda"]) >= 200 && Convert.ToInt32(Request.QueryString["oda"]) < 300) { Write("2"); } @if (Convert.ToInt32(Request.QueryString["oda"]) >= 300 && Convert.ToInt32(Request.QueryString["oda"]) < 400) { Write("3"); } </option>
                                        </select>
                                        <span class="select-arrow"></span>
                                    </div>
                                </div>
                                <div class="col-sm-6">
                                    <div class="form-group">
                                        <span class="form-label">Çocuk (0-17)</span>
                                        <select class="form-control">
                                            <option selected>0</option>
                                            <option>1</option>
                                            <option>2</option>
                                        </select>
                                        <span class="select-arrow"></span>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <span class="form-label">Oda Numarası</span>
                                <select class="form-control" required name="kayit_oda_id">
                                    <option value="" selected hidden>Select room type</option>
                                    <option selected contenteditable="false" >@Request.QueryString["oda"]</option>

                                </select>
                                <span class="select-arrow"></span>
                            </div>

                            <!-- isim soyisim-->

                            <div class="row no-margin">
                                @if (Convert.ToInt32(Request.QueryString["oda"]) < 200)
                                {

                                    <div class="col-sm-12">
                                        <div class="form-group">
                                            <span class="form-label">1.İsim Soyisim</span>
                                            <input class="form-control" name="adsoyad1" type="text" placeholder="Tam ad giriniz.">
                                        </div>
                                    </div>
                                }
                                @if (Convert.ToInt32(Request.QueryString["oda"]) >= 200 && Convert.ToInt32(Request.QueryString["oda"]) < 300)
                                {
                                    for (int i = 0; i <= 1; i++)
                                    {
                                        <div class="col-sm-6">
                                            <div class="form-group">
                                                <span class="form-label">@(i+1).İsim Soyisim</span>
                                                <input class="form-control" name="adsoyad@(i+1)" type="text" placeholder="Tam ad giriniz.">
                                            </div>
                                        </div>
                                    }
                                }
                                @if (Convert.ToInt32(Request.QueryString["oda"]) >= 300 && Convert.ToInt32(Request.QueryString["oda"]) < 400)
                                {
                                    for (int i = 0; i <= 2; i++)
                                    {
                                        <div class="col-sm-4">
                                            <div class="form-group">
                                                <span class="form-label">@(i+1).İsim Soyisim</span>
                                                <input class="form-control" name="adsoyad@(i+1)" type="text" placeholder="Tam ad giriniz.">
                                            </div>
                                        </div>
                                    }
                                }

                            </div>


                            <!--tc-->
                            <div class="row no-margin">
                                @if (Convert.ToInt32(Request.QueryString["oda"]) < 200)
                                {

                                    <div class="col-sm-12">
                                        <div class="form-group">
                                            <span class="form-label">1.TC</span>
                                            <input class="form-control" name="tc1" type="text" placeholder="Tc giriniz.">
                                        </div>
                                    </div>
                                }
                                @if (Convert.ToInt32(Request.QueryString["oda"]) >= 200 && Convert.ToInt32(Request.QueryString["oda"]) < 300)
                                {
                                    for (int i = 0; i <= 1; i++)
                                    {
                                        <div class="col-sm-6">
                                            <div class="form-group">
                                                <span class="form-label">@(i+1).TC</span>
                                                <input class="form-control" name="tc@(i+1)" type="text" placeholder="Tc giriniz.">
                                            </div>
                                        </div>
                                    }
                                }
                                @if (Convert.ToInt32(Request.QueryString["oda"]) >= 300 && Convert.ToInt32(Request.QueryString["oda"]) < 400)
                                {
                                    for (int i = 0; i <= 2; i++)
                                    {
                                        <div class="col-sm-4">
                                            <div class="form-group">
                                                <span class="form-label">@(i+1).TC</span>
                                                <input class="form-control" type="text"name="tc@(i+1)" pattern="\d*" placeholder="Tc giriniz.">
                                            </div>
                                        </div>
                                    }
                                }

                            </div>
                            <!-- tc-->




                            <div class="form-btn">
                                <button class="submit-btn">Kayit Al</button>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>
