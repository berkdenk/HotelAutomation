@using otelotomasyonu.Models
@model List<otel_log>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Log Sayfası</title>
    <!-- Latest compiled and minified CSS -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
    <script src="https://code.jquery.com/jquery-3.6.0.slim.min.js"></script>
    <link href="~/login-form-17/css2/jquery.dataTables.min.css" rel="stylesheet" />
    <script src="~/login-form-17/js/jquery.dataTables.min.js"></script>
    <script>
        $(document).ready(function () {
            $('#example').DataTable();
        });</script>
</head>
<body>

    <div class="container">
        <div class="row header" style="text-align:center;color:green">
            <h3>Otel İşlem Geçmişi</h3>
        </div>
        <form method="post">
            <table id="example" class="table table-striped table-bordered" style="width:100%">
                <thead>
                    <tr>
                        <th>İşlem ID</th>
                        <th>İşlem Açıklaması</th>
                        <th>İşlemi Yapan</th>
                        <th>İşlem Yapilan Zaman</th>
                    </tr>
                </thead>
                <tbody>

                    @foreach (var item in Model)
                    {
                       
                            <tr>

                                <td>@item.islem_id</td>
                                <td>@item.islem_aciklama</td>
                                <td>@item.islem_yapan</td>
                                <td>@item.islem_yapilan_zaman</td>
                                
                            </tr>
                        
                    }

                </tbody>
            </table>
        </form>
    </div>
</body>
</html>

